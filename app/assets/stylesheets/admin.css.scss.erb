/* ----- content ----- */



#header{
	color:#fff;
	border-bottom:1px solid #000;
	background: #000; /* Old browsers */
}

.header_container{
	height: 70px;
}

#header .logo{
	text-align: center;
	vertical-align: middle;
	width: 184px;
	margin-top: 3px;
}

#header #logo span{
	color:#eee;
}

.header_container ul li a {
	padding-top: 10px;
	color: white;
}
.active {
	color: #428bca !important;
}

.active a{
	color: #428bca !important;
}

.header_container ul li a:hover {
	background: #000;
	color: #428bca;
}

.header_container ul li {
	list-style-position: inside;
	border-right: 1px solid white;
	padding-right: 6px;
}

#languages{
	border-right: 0px;
	padding-top: 9px;
	a, span{
		display: inline;
	}
	a{
		vertical-align: top;
	}
	.english{
		padding-right: 0px;
	}
	.spanish{
		padding-left: 0px;
	}
	span{
		padding-top: 10px;
	}
}

#social{
	text-align: right;
	padding-right: 20px;
	margin-top: 13px;
	margin-bottom: 13px;
	padding: 10px;
	width: 270px; 
	height: 78px;
}

#social a{
	display: inline-block;
	vertical-align: top;
}

.login_container {
	background-color: #ACB3E9;
	border-top-right-radius: 7px;
	border-bottom-right-radius: 7px;
	margin-top: 13px;
	margin-bottom: 13px;
	padding: 10px;
	width: 270px; 
	height: 78px;
}

#sign_in_container{
	border: 1px solid;
	border-radius: 28px;
	margin-top: 39px;
	border-color: #BCBCBC;
	-webkit-box-shadow: -1px 4px 16px 0px rgba(49, 45, 45, 0.46);
	-moz-box-shadow:    -1px 4px 16px 0px rgba(49, 45, 45, 0.46);
	box-shadow:         -1px 4px 16px 0px rgba(49, 45, 45, 0.46);
}

.btn_bundle{
