body{
	color: #444;
}

h1, h2, h3, h4{
	padding: 5px 7px;
}

h1{
	font-size: 28px;
}

h2{
	font-size: 24px;
}

h3{
	font-size: 20px;
}

h4{
	font-size: 16px;
}

p, span, strong{
	font-size: 16px;
}

small{
	font-size: 14px;
}

strong{
	font-weight: bold;
}



