body{
	background-color: #eee;
	font-size: 16px;
}

h1, h2, h3, h4{
	padding: 10px;
	margin: 0;
}

h1{
	font-weight: bold;
	color: #336699;
	font-size: 20px;
	span{
		font-size: 16px;
	}
	small{ font-size: 16px }
	&.title{
		border-bottom: 1px solid #93a1a1;
		margin: 0 -15px;
	}
	background-color: #fff;
}

h2{
	font-size: 20px;
}

.btn-primary{
	border-radius: 0px;
	font-size: 16px;
}

.btn-default{
	border-radius: 0px;
	color: #336699;
	font-size: 16px;
}

a{
	text-decoration: none;
	&:hover{
		text-decoration: none;
	}
}

.user-menu{
	text-align: center;
	background-color: #fff;
	border-bottom: 1px solid #93a1a1;
	padding: 10px;
	li{
		width: 24.5%;
		a{
			padding: 0 !important;
			img{
				height: 45px;
			}
		}
	}
}

.row{
	margin: 0;
}

.footer{
	margin: 0;
	.navbar-header{
		float: left;
	}
	.navbar-text{
		float: right;
		margin-left: 15px;
		margin-right: 15px;
	}
}

.dropdown.text-center{
	h1{
		cursor: pointer;
	}
	ul{
		width: 100%;
	}
}

.clean{
	color: inherit !important;
}

.white{
	background-color: #fff;
}

@media screen and (max-width: 768px) {
	body{
		font-size: 16px;
	}
	h1{
		font-size: 20px;
		span{
			font-size: 16px;
		}
	}
	h2{
		font-size: 20px;
	}
	.btn-primary{
		font-size: 16px;
	}
	.btn-default{
		font-size: 16px;
	}
}
 
@media screen and (max-width: 568px) {
	body{
		font-size: 16px;
	}
	h1{
		font-size: 20px;
		span{
			font-size: 16px;
		}
	}
	h2{
		font-size: 20px;
	}
	.btn-primary{
		font-size: 16px;
	}
	.btn-default{
		font-size: 16px;
	}
}