section#content{
	min-height:80%;
	padding:20px 0;
	min-width:960px;
	text-align:justify;
}

article{
	border:1px solid #aaa;
	background:#fff;
	padding:10px;
	margin-bottom:15px;
}

article h1{
	font-family: Tahoma;
				font-weight: normal;
	padding:10px 10px;
	margin-bottom:15px;
}

article h2{
	color:#107A93;
	margin:10px 0px 0px 10px;
}

article .links{
	text-align:right;
	margin-top:10px;
}

.content img{
	border:1px solid #ddd;
	padding:4px;
}

.content ul, .content ol{
	margin-left:10px;
	padding-left:10px;
	margin-bottom:10px;
}

.content ul ul, .content ol ol{
	margin-bottom:0;
}

.content ul{
	list-style:circle;
}

.content ol{
	list-style:decimal;
}

.content ol ol{
	list-style:lower-alpha;
}

.content dl dd{
	margin:0 0 10px 20px;
}




form fieldset{
	margin: 15px 6px;
	padding: 6px;
}

fieldset{
	margin:6px;
	padding:6px;
	border:1px solid #e5e5e5;
}

form legend{
	text-transform:uppercase;
	margin:10px 0;
	padding: 5px 0;
}

legend{
	font-size:16px;
	text-transform:uppercase;
	margin:10px 0;
}

fieldset .legend-son{
	font-size: 14px;
}

.title_border{
		width:inherit; /* Or auto */
    padding:0 10px; /* To give a bit of padding on the left and right */
    border-bottom:none;
}

fieldset.title_border {
		border-top: 1px groove #ddd;
		padding: 0 1.4em 1.4em 1.4em;
		margin: 0 0 1.5em 0;
		margin-top: 35px;
}

legend.title_border{
		width:auto;
    padding:0 10px;
    border-bottom:none;
    margin-left: 40px;
}

.btn-search{
	float: right;
	margin: 0 15px !important;
}

article{
	-webkit-box-shadow:3px 3px 0 #ddd;
	-moz-box-shadow:3px 3px 0 #ddd;
	box-shadow:3px 3px 0 #ddd;
	-webkit-border-radius:5px;
	-moz-border-radius:5px;
	border-radius:5px;
}

article h1{
	-webkit-border-radius:5px;
	-moz-border-radius:5px;
	border-radius:5px;
}

table tbody tr .btn-rud{
	width: 115px;
	.btn{
		padding: 2px 7px;
	}
}

.icons {
	text-align: center;
	ul {
		li {
			margin: 10px 10px;
			width: 150px;
			display: inline-block;
			vertical-align: top;
			a {
				span {
					display: block;
					color: black;
				}
			}
		}
	}
}

