<% if @esa_types.length > 0 %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% for esa_type in @esa_types %>
        <tr>
          <td><%= esa_type.name %></td>
          <td class="btn-rud">
            <%= link_to '<i class="glyphicon glyphicon-search"></i>'.html_safe, admin_esa_type_path(esa_type), class: "btn btn-default btn-show", data: {toggle: "tooltip"}, title: "View" %>
            <%= link_to '<i class="glyphicon glyphicon-pencil"></i>'.html_safe, edit_admin_esa_type_path(esa_type), {class: "btn btn-default btn-edit", data: {toggle: "tooltip"}, title: "Edit"} %>
            <%#= link_to '<i class="glyphicon glyphicon-remove"></i>'.html_safe, {action: 'destroy', id: esa}, {method: "delete", class: "btn btn-default btn-remove", data: {toggle: "tooltip", confirm: "Seguro que desea elimar el esa: '" + esa.title + "'?"}, title: "Eliminar"} %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= actions_tooltip %>
  <div class="tablefooter clearfix">
    <div class="pagination">
      <%= will_paginate @esa_types %>
      <%= paginate_ajax_js %>
    </div>
  </div>
<%else%>
  <p>No ESAS found</p>
<%end%>
