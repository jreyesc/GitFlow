<%= form_tag admin_steps_path, :method => :get, remote: "true", class: "form-horizontal", role: 'form' do %>
	<div class="form-group col-sm-12 col-md-10">
		<label for="esa_id" class="col-sm-2 control-label">Esa:</label>
		<div class="col-sm-10">
			<%= select_tag "esa_id", options_from_collection_for_select(@esas, "id", "title",(@esa.id unless @esa.nil?)), {:prompt => "Select esa", :class => 'form-control'}%>
		</div>
	</div>
	<div class="form-group col-sm-12 col-md-10">
		<label for="area_id" class="col-sm-2 control-label">Area:</label>
		<div class="col-sm-10">
			<%= select_tag "area_id", (options_from_collection_for_select(@areas, "id", "title",(@area.id unless @area.nil?)) unless @areas.blank?), {:prompt => "Select esa", :class => 'form-control'}%>
		</div>
	</div>
	<div class="form-group col-sm-12 col-md-10">
		<label for="recommendation_id" class="col-sm-2 control-label">Recommendation:</label>
		<div class="col-sm-10">
			<%= select_tag "recommendation_id", options_from_collection_for_select(@recommendations, "id", "goal_text", (@recommendation.id unless @recommendation.nil?)), {:prompt => "Select esa", :class => 'form-control'}%>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10 col-md-2">
			<%= submit_tag "search", class: "btn btn-default", disable_with: "searching" %>
		</div>
	</div>
<% end %>
<br>