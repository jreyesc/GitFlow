<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

		<fieldset class="title_border">
					<div id="legend_container">
						<legend class="title_border">Forgot your password?</legend>
					</div>

						<div class="form-signin">
							<div class="row">	
								<div class="row">
						  			<div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3">
						  				<div><%= f.label :email %><br />
		  								<%= f.email_field :email, :autofocus => true, :class => "form-control", :placeholder => "Email", :required => "" %></div>
									</div>
								</div>

								<div id="btn_forgot_password" class="row">
						  			<div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3">
										<div><%= f.submit "Send me email", :class => "btn btn-primary btn-lg btn-block" %></div>
									</div>
								</div>

								<div  class="row">
						  			<div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3">
										<%= render "devise/shared/links" %>
									</div>
								</div>
							</div>
						</div>	
		</fieldset>


<% end %>