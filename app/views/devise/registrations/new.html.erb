
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
<fieldset class="title_border">

			<div id="legend_container">
				<legend class="title_border">Sign up</legend>
			</div>

				<div class="form-signin">
					<div class="row">	
						<div class="row">
				  			<div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3">
				  				<div><%= f.label :email %><br />
  								<%= f.email_field :email, :autofocus => true, :class => "form-control", :placeholder => "Email", :required => "" %></div>
							</div>
						</div>

						<div class="row">
				  			<div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3">
				  				<div><%= f.label :password %><br />
   								 <%= f.password_field :password, :autofocus => true, :class => "form-control", :placeholder => "Password", :required => "" %></div>			
				  			</div>
						</div>

						<div class="row">
				  			<div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3">
				  				<div><%= f.label :password_confirmation %><br />
    							<%= f.password_field :password_confirmation, :autofocus => true, :class => "form-control", :placeholder => "Password", :required => "" %></div>			
				  			</div>
						</div>

						
						<div class="row">
				  			<div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3">
				  					<% if devise_mapping.rememberable? -%>
										<label class="checkbox">
											<%= f.check_box :remember_me %> <%= t("login.remember_me") %>
										</label>
									<% end %>			
				  			</div>
						</div>


						<div class="row">
				  			<div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3">
								<div><%= f.submit "Sign up", :class => "btn btn-primary btn-lg btn-block" %></div>
							</div>
						</div>

						<div class="row">
				  			<div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3">
								<%= render "devise/shared/links" %>
							</div>
						</div>
					</div>
				</div>	
		</fieldset>

  

  
<% end %>






