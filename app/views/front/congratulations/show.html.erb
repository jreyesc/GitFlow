<%= render partial: "title", locals: { title: "Congratulations!" } %>

<%= render partial: "subtitle", locals: { subtitle: "You've complete this action." } %>

<div class="row white border-top border-bottom">
	<div id="congratulation_message" class="center body_text">
		<%= @esa.congratulations_message.html_safe %>
	</div>
</div>
<br>
<div class="row">
	<div class="col-xs-12 col-md-6 col-md-offset-3">
		<%= link_to front_root_path do%>
			<div class="btn btn-primary btn-block">
				See next Action
			</div>
		<% end %>
	</div>
</div>

<script type="text/javascript">
	$('#congratulation_message').innerHTML = 'Your text.';

	var el = $('#congratulation_message');
	el.html(replaceAll(el.html(), "[energy_value]", "<%= @total_saving %> KWh/year"));
	el.html(replaceAll(el.html(), "[area_items]", "<%=  @items.collect{ |x| x.name }.join(",") %>"));
	el.html(replaceAll(el.html(), "[recommendation_items]", "<%=  @recommendation_items.collect{ |x| x.title }.join(",") %>"));
</script>
