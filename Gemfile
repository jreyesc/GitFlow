source 'https://rubygems.org'

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '>= 4.1.7'

# Use mysql as the database for Active Record
gem 'mysql2', '~> 0.3.14'

# Use SCSS for stylesheets
gem 'sass-rails', '>= 4.0.0'

# Use Uglifier as compressor for JavaScript assets
gem 'uglifier', '>= 1.3.0'

# Use CoffeeScript for .js.coffee assets and views
gem 'coffee-rails', '~> 4.0.0'

# Use Modernizr for supporting on any browser
gem 'modernizr-rails', '~> 2.7.0'

# See https://github.com/sstephenson/execjs#readme for more supported runtimes
# gem 'therubyracer', platforms: :ruby

# Use jquery as the JavaScript library
gem 'jquery-rails', '~> 3.0.2'

# Use jquery-ui
gem 'jquery-ui-rails', '5.0.2'

#Validate Engine for forms
gem "jQuery-Validation-Engine-rails", "~> 0.0.2"

# Turbolinks makes following links in your web application faster. Read more: https://github.com/rails/turbolinks
gem 'turbolinks', '~> 2.5.1'

# Build JSON APIs with ease. Read more: https://github.com/rails/jbuilder
gem 'jbuilder', '~> 1.2'

# Use Devise as a Authentication Library
gem 'devise', '~> 3.2.0'

# Use Schema Plus for generating foreign keys automatically
gem 'schema_plus', '~> 1.3.1'

# Use Seed Bank for having more than one seed file and generating data runing tasks
gem 'seedbank', '0.3.0.pre2'

# Use Will Paginate for paginating your lists
gem 'will_paginate', '3.0.4'

# Use Google Analytics for registering events and pages visited daily
gem 'google-analytics-rails', '~> 0.0.4'

# Use Friendly Id for having cleaner URLs without IDs
gem 'friendly_id', '~> 5.0.2'

# Use Bootstrap as a CSS Library
gem 'bootstrap-sass', '~> 3.0.2.0'

# Use BootstrapDatepicker for having a format of selecting dates.
gem 'bootstrap-datepicker-rails', '~> 1.1.1.1'

# Sunspot::Rails is an extension to the Sunspot library for Solr search.
gem 'sunspot_rails', '~> 2.1.0'

# Sunspot::Solr provides a bundled Solr distribution for use with Sunspot. 
gem 'sunspot_solr', '~> 2.1.0'

# Paperclip is intended as an easy file attachment library for Active Record
gem "paperclip", "~> 4.2"

# Gem for amazon 
gem "amazon-ecs", "~> 2.2.5"

# Gem for text edit
gem "bootstrap-wysihtml5-rails", "~> 0.3.3.1"

gem 'nested_form', '0.3.2'
gem 'progress_bar'

#run jobs
gem 'daemons'

# delayed_job to send email in background
gem 'delayed_job_active_record', '4.0.1'

group :doc do
  # bundle exec rake doc:rails generates the API under doc/api.
  gem 'sdoc', require: false
end

